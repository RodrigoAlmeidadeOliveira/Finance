# ===========================================
# Flow Forecaster - Environment Variables
# Contabo VPS Production Configuration
# ===========================================

# ===============================
# PostgreSQL Database
# ===============================
POSTGRES_USER=forecaster
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=flow_forecaster

# ===============================
# Application Security
# ===============================
# Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECRET_KEY
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# ===============================
# CORS Configuration
# ===============================
# Use your actual domain(s), comma-separated
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ===============================
# OpenAI Integration (Optional)
# ===============================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# ===============================
# Gunicorn Configuration
# ===============================
# Adjust based on VPS resources
# Recommended: (2 x CPU cores) + 1
GUNICORN_WORKERS=4
GUNICORN_THREADS=2

# ===============================
# Logging
# ===============================
LOG_LEVEL=INFO

# ===============================
# Domain Configuration
# ===============================
DOMAIN=yourdomain.com

# ===============================
# SSL/TLS (Let's Encrypt)
# ===============================
# Email for Let's Encrypt notifications
LETSENCRYPT_EMAIL=your-email@example.com
