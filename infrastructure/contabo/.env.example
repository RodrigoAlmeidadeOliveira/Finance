# ===========================================
# Planner Financeiro - Environment Variables
# Contabo VPS Production Configuration (Port 8080)
# ===========================================

# ===============================
# PostgreSQL Database
# ===============================
POSTGRES_USER=planner
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=planner_financeiro

# ===============================
# Application Security
# ===============================
# Generate with: openssl rand -base64 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_SECRET_KEY

# JWT Configuration
JWT_SECRET_KEY=CHANGE_THIS_TO_ANOTHER_SECRET_KEY
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# ===============================
# CORS Configuration
# ===============================
# Use IP:8080 or your actual domain(s), comma-separated
CORS_ORIGINS=http://164.68.108.166:8080,http://localhost:8080

# ===============================
# OpenAI Integration (Optional)
# ===============================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# ===============================
# Gunicorn Configuration
# ===============================
# Reduced for shared VPS (alongside Flow Forecaster)
GUNICORN_WORKERS=2
GUNICORN_THREADS=2

# ===============================
# Logging
# ===============================
LOG_LEVEL=INFO
